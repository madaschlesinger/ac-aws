{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-25158352",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "Mesos-Slave {{timestamp}}",
    "user_data_file": "scripts/user_data.sh"
  }],
  "provisioners": [
   {
      "type": "shell",
      "inline": [
        "sleep 30",
        "curl -O http://dl.fedoraproject.org/pub/epel/7/x86_64/e/epel-release-7-5.noarch.rpm && sudo yum localinstall -y epel-release-7-5.noarch.rpm && sudo yum -y install python python-devel ansible"
      ]
    },
   {
      "type": "file",
      "source": "scripts/mesos-slave-configure.sh",
      "destination": "/tmp/mesos-slave-configure"
   },
   {
      "type": "file",
      "source": "../provisioning/repo/docker.repo",
      "destination": "/home/ec2-user/docker.repo"
   },
   {
      "type": "shell",
      "inline": [
        "sudo mv /tmp/mesos-slave-configure /etc/init.d && chmod +x /etc/init.d/mesos-slave-configure && sudo chkconfig mesos-slave-configure on"
      ]
    },
   {
      "type": "ansible-local",
      "playbook_file": "../provisioning/playbooks/slave_packer.yml",
      "playbook_dir": "../provisioning/playbooks"
   }
  ]
}
